{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "nilnovi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#entity"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.nilnovi",
					"match": "\\b(begin|end|return|if|elif|else|while|for)\\b"
				},
				{
					"name": "keyword.other.nilnovi",
					"match": "\\b(loop|then|from|to|is|procedure|function|or|and|not|true|false)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.nilnovi",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.nilnovi",
					"match": "\\\\."
				}
			]
		},
		"comment":{
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"match": "\\#.*"
				},
				{
					"name": "comment.block.documentation",
					"begin": "\\/\\*",
					"end": "\\*\\/"
				}
			]
		},
		"constant":{
			"patterns":[
				{
					"name": "constant.numeric",
					"match": "[0-9]"
				}
			]
		},
		"entity":{
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "\\b(get|put)\\b"
				},
				{
					"name": "entity.name.type",
					"match": "\\b(integer|boolean)\\b"
				}
			]
		}
	},
	"scopeName": "source.nilnovi"
}